<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/default_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/origin_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/origin"
            android:maxLines="1"
            android:singleLine="true"
            android:lines="1"
            android:maxLength="3"
            android:inputType="textCapCharacters"
            android:imeOptions="actionNext"
            app:MvxBind="Text OriginCode"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/destination_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/destination"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:maxLength="3"
            android:singleLine="true"
            android:lines="1"
            android:imeOptions="actionDone"
            app:MvxBind="Text DestinationCode"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fromdate_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/flight_date"
            android:inputType="datetime"
            android:maxLines="1"
            android:singleLine="true"
            android:lines="1"
            android:focusable="false"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/search_btn"
        android:layout_marginTop="@dimen/small_margin"
        app:MvxBind="Click SearchAsyncCommand"
        android:text="@string/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
